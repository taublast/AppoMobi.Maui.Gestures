<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:touch="clr-namespace:AppoMobi.Maui.Gestures;assembly=AppoMobi.Maui.Gestures"
             xmlns:gesturesTester="clr-namespace:GesturesTester"
             x:Class="GesturesTester.MainPage"
             Title="Gesture Tester">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10" RowSpacing="10">

        <!-- Title -->
        <Label Grid.Row="0"
               Text="Multi-Platform Gesture Tester"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <!-- Main Test Area - Big Canvas -->
        <gesturesTester:TouchBorder Grid.Row="1"
                                    x:Name="TestCanvas"
                     BackgroundColor="LightBlue"
                     StrokeThickness="3"
                     Stroke="DarkBlue"
                     touch:TouchEffect.ShareTouch="Lock"
                     touch:TouchEffect.ForceAttach="True">

            <gesturesTester:TouchBorder.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </gesturesTester:TouchBorder.StrokeShape>

            <Grid>
                <Label x:Name="CanvasLabel"
                       Text="TEST AREA&#10;&#10;Try: Left Click, Right Click, Middle Click&#10;Hover, Drag, Two-Finger Pinch&#10;Scroll Wheel"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="DarkBlue"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

                <!-- Visual indicator for pointer position -->
                <Ellipse x:Name="PointerIndicator"
                         Fill="Red"
                         WidthRequest="25"
                         HeightRequest="25"
                         IsVisible="False"
                         HorizontalOptions="Start"
                         VerticalOptions="Start"
                         Opacity="0.7"/>
            </Grid>
        </gesturesTester:TouchBorder>

        <!-- Slider Test Area (Manual Mode) -->
        <Frame Grid.Row="2" BorderColor="Purple" Padding="10">
            <VerticalStackLayout Spacing="5">
                <Label Text="Slider Test (Manual Mode - allows parent scrolling when not dragging)"
                       FontSize="12"
                       TextColor="Purple"
                       FontAttributes="Bold"/>

                <Slider x:Name="TestSlider"
                        Minimum="0"
                        Maximum="100"
                        Value="50"
                        MinimumTrackColor="Purple"
                        MaximumTrackColor="LightGray"
                        ThumbColor="Purple"
                        touch:TouchEffect.ForceAttach="True"
                        touch:TouchEffect.ShareTouch="Manual"/>

                <Label x:Name="SliderValueLabel"
                       Text="Value: 50"
                       TextColor="Purple"
                       FontSize="14"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </Frame>


    </Grid>

</ContentPage>
